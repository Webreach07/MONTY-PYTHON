def isPalindrome(s):
    return s == s[::-1]
 
 
# Driver code
s = input("Enter a Word to check whether it is Palindrome or not")#To Enter a Word using String
ans = isPalindrome(s)#condition
 
if ans:#if condition initialized
    print("Yes, The Word is a Palindrome")#display This Statement if the word is a Palindrome
else:
    print("No, The Word is not a Palindrome")#display This Statement if the word is not a Palindrome
